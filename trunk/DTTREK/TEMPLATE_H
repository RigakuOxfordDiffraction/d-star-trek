//+Include files

#include <iostream.h>
#include "Cimage_header.h"

//+Definitions and constants

//+Code begin

class Cimage_header;

class Cimage {

public:
   int i;
   int j;
   Cimage_header header;

////////////////////////////////////////////////////////////////////////
//+Constructors, destructors and assignments

Cimage ();
Cimage (int ii, int jj)
	{ i = ii; j = jj; }
~Cimage ();

////////////////////////////////////////////////////////////////////////
//+Member fFunction prototypes
 public:

int nGetDimensions(void)
	 { cout << "First dim is " << i << " Second dim is " << j << "\n";
	   return 0; }

//

int nGetState(void)
	{}

int nGetRotation(void)
	{}

int nGetImage(int array)
	{}

int nPutImage(int array)
	{}

int nGetPixel(int array)
	{}

int nPutPixel(int array)
	{}

int nGetRect(int array)
	{}

int nPutRect(int array)
	{}

int nConvertByteOrder(void)
	{}

int nCompress (void)
	{}

int nUncompress (void)
	{}

int nUnscramble (void)
	{}

int nConvertOrientation (void)
	{}

int nRead(void)
	{}

int nWrite(void)
	{}        

private:

};  // end of class Cimage

#endif   // DT_CIMAGE_H
